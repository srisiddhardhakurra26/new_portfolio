{
  "version": 2,
  "buildCommand": "echo 'No build needed for API-only deployment'",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/chat.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
